<div class='container'>
<p id="notice"><%= notice %></p>

<%= search_form_for @search do |f| %>
  <% Invoice::CUSTOMERS.each do |k,val| %>
    <%= check_box_tag('q[customer_eq_any][]',k) %>
    <%= val %>
  <% end %>
  <%= f.submit %>
<% end %>

<h1>Invoices</h1>


<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Currency</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.customer %></td>
        <td><%= invoice.description %></td>
        <td><%= invoice.amount %></td>
        <td><%= invoice.currency %></td>
        <td><%= invoice.status %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @invoices, theme: 'twitter-bootstrap-4' %>

<%= link_to 'New Invoice', new_invoice_path %>
</div>
